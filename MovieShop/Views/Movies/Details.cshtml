@model ApplicationCore.Entities.Movie

@{
    ViewData["Title"] = Model.Title;
    var averageRating = Model.Reviews != null && Model.Reviews.Any()
                       ? Model.Reviews.Average(r => r.Rating)
                       : 0;
}

<div class="container">
    <!-- First Row -->
    <div class="row my-4 bg-image" style="background-image:url('@Model.BackdropUrl')" :>
        <div class="mask" style="background-color: rgba(0, 0, 0, 0.6);">
            <div class="d-flex justify-content-center align-items-center h-100">
            
        <!-- First Column: Movie Poster -->
        <div class="col-md-3">
            <img src="@Model.PosterUrl" class="img-fluid" alt="Movie Poster">
        </div>

        <!-- Second Column: Movie Details -->
        <div class="col-md-6">
            <h2 style="color:white">@Model.Title</h2>
            <div>
                @foreach (var genre in Model.MovieGenres)
                {
                    <span style="color:white" class="badge badge-primary">@genre.Genre.Name</span>
                }
            </div>
            <br>
            <p style="color:white">@Model.Overview</p>
            <div>
                <span class="badge badge-secondary">Rating: @averageRating.ToString("0.0")</span>
            </div>
        </div>

        <!-- Third Column: Action Buttons -->
        <div class="col-md-3">
            <br>
            <br>
            <button type="button" class="btn btn-success" data-toggle="modal" data-target="#buyModal">
                Buy Movie
            </button>
            <button type="button" class="btn btn-info" data-toggle="modal" data-target="#reviewModal">
                Review
            </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Second Row -->
    <div class="row my-4">
        <!-- First Column: Movie Facts and Trailers -->
        <div class="col-md-6">
            <!-- Movie Facts -->
            <div class="mb-4">
                <h3>Movie Facts</h3>
                <ul class="list-group">
                    <li class="list-group-item">Release Date: @Model.ReleaseDate.ToShortDateString()</li>
                    <li class="list-group-item">Revenue: $@Model.Revenue</li>
                    <li class="list-group-item">Budget: $@Model.Budget</li>
                </ul>
            </div>
            <!-- Trailers -->
            <div>
                <h3>Trailers</h3>
                <ul class="list-group">
                    @foreach (var trailer in Model.Trailers)
                    {
                        <li class="list-group-item"><a href="@trailer.TrailerUrl">@trailer.Name</a></li>
                    }
                </ul>
            </div>
        </div>

        <!-- Second Column: Casts -->
        <div class="col-md-6">
            <h3>Cast</h3>
            <ul class="list-group">
                @foreach (var cast in Model.MovieCasts)
                {
                    <li class="list-group-item d-flex align-items-center">
                        <img src="@cast.Cast.ProfilePath" alt="@cast.Cast.Name" class="img-thumbnail rounded-circle" style="width: 50px; height: 50px; object-fit: cover; margin-right: 10px;">
                        <div>
                            <a href="/Cast/Details/@cast.Cast.Id">@cast.Cast.Name</a> as @cast.Character
                        </div>
                    </li>
                }
            </ul>
        </div>
    </div>
</div>

<!-- Buy Movie Modal -->
<div class="modal fade" id="buyModal" tabindex="-1" aria-labelledby="buyModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="buyModalLabel">Buy Movie</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>Price: $@Model.Price</p>
                <button type="button" class="btn btn-primary">Purchase</button>
            </div>
        </div>
    </div>
</div>

<!-- Review Modal -->
<div class="modal fade" id="reviewModal" tabindex="-1" aria-labelledby="reviewModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="reviewModalLabel">Review Movie</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form>
                    <div class="form-group">
                        <label for="rating">Rating</label>
                        <select class="form-control" id="rating">
                            @for (int i = 1; i <= 10; i++)
                            {
                                <option value="@i">@i</option>
                            }
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="reviewText">Review</label>
                        <textarea class="form-control" id="reviewText" rows="3"></textarea>
                    </div>
                    <button type="submit" class="btn btn-primary">Submit</button>
                </form>
            </div>
        </div>
    </div>
</div>
